<% include ../header %>
<body>
	<% include ../userNavbar %>
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">
				<form class="login100-form validate-form" action="/user/update" method="POST" >
					<span class="login100-form-title p-b-33">
						Edit User
					</span>

                    <div class="wrap-input100 validate-input" data-validate = "Valid name is required: abc hih klm">
                            <input class="input100" type="text" disabled name="id" placeholder="" value="<%=userData._id%>">
                            <span class="focus-input100-1"></span>
                            <span class="focus-input100-2"></span>
                        </div>

                    <div class="wrap-input100 validate-input" data-validate = "Valid name is required: abc hih klm">
						<input class="input100" type="text" name="fullname" placeholder="Full name" value="<%=userData.name%>">
						<span class="focus-input100-1"></span>
						<span class="focus-input100-2"></span>
                    </div>
                    
					<div class="wrap-input100 validate-input" data-validate = "Valid email is required: ex@abc.xyz">
						<input class="input100" type="text" name="email" placeholder="Email" value="<%=userData.email%>">
						<span class="focus-input100-1"></span>
						<span class="focus-input100-2"></span>
					</div>
					<div class="container-login100-form-btn m-t-20">
						<button class="login100-form-btn" type="submit">
							Update
						</button>
                    </div>
                	
				</form>
			</div>
		</div>
	</div>
	
<% include ../footer %>
